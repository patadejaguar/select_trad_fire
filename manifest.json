{
        "manifest_version": 2,
        "name": "Selecciona y traduce",
        "version": "0.12",
        "description": "Solo selecciona y traduzca",
        "homepage_url": "https://github.com/patadejaguar/select_trad_fire",
      
        "background": {
                "scripts": ["select_trad.js"]
        },
        
        "content_scripts": [{
                "matches": ["<all_urls>"],
                "js": ["send_selection.js"]
        }],

        "permissions": [
                "contextMenus",
                "activeTab",
                "tabs"
        ], 
        "icons": {
                "96": "picture/icon_96.png",
                "64": "picture/icon_64.png",
                "48": "picture/icon_48.png"
        }

} 
